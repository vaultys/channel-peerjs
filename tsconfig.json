{
  "compilerOptions": {
    "target": "es2021",
    "module": "ESNext",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "index.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}